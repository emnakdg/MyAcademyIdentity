@model LoginViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="login-box">
    <div class="login-logo">
        <a href="/Login/Index"><b>Email</b>App</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Hesabınıza Giriş Yapın</p>

            <form method="post">
                <div class="input-group mb-3">
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email" required>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Şifre" required>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <a href="/Register/Signup" class="btn btn-primary btn-block">Kayıt Ol</a>
                    </div>

                    <div class="col-6">
                        <button class="btn btn-primary btn-block">Giriş Yap</button>
                    </div>
                </div>
         
                <span class="text-danger">@Html.ValidationSummary()</span>
            </form>

        </div>
        <!-- /.login-card-body -->
    </div>
</div>
